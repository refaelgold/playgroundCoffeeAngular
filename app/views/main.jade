    .page-header
        h1 Birthday Reminders

    //run in the array
    ul(ng-repeat='bday in bdays')
        li &lcub;&lcub;bday&period;name&rcub;&rcub; &VerticalLine; &lcub;&lcub;bday&period;date&rcub;&rcub;

    //get a new form with submit button
    form(ng-show='visible', ng-submit='newBirthday()')
        label Name&colon;
        input(type='text', ng-model='bdayname', placeholder='Name')
        label Date&colon;
        input(type='date', ng-model='bdaydate', placeholder='Date')
        button.btn(type='submit',ng-click='visibleBDays = true') Save
    #push
    a.btn(ng-click='visible = true')
        i.icon-plus
        | Add


    h2 convert to JSON
    pre(ng-show='visibleBDays') &lcub;&lcub; bdays | json &rcub;&rcub;
    a(href='data:text/json;charset=utf-8,{{bdays | json | encodeURIComponent }}', download='BDay_list.json')
        button download JSON for all the list


    h2 convert to JSON Last ValueAdd
    pre(ng-show='visibleBDays') &lcub;&lcub; lastItem | json &rcub;&rcub;
    a(href='data:text/json;charset=utf-8,{{lastItem | json | encodeURIComponent }}', download='BDay_list.json')
        button download Single Json
