.container
    .col-sm-8.col-sm-offset-2
        //
           PAGE HEADER 
        .page-header
            h1 AngularJS Form Validation
        //
           FORM 
        //
           pass in the variable if our form is valid or invalid 
        form(name='userForm', ng-submit='submitForm(userForm.$valid)', novalidate='novalidate')
            //
               novalidate prevents HTML5 validation since we will be validating ourselves
            //
            .form-group(ng-class='{ \'has-error\' : userForm.name.$invalid && !userForm.name.$pristine }')
                label Name
                input.form-control(type='text', name='name', ng-model='user.name', required='required')
                p.help-block(ng-show='userForm.name.$invalid && !userForm.name.$pristine') You name is required.
            //
               USERNAME
            .form-group(ng-class='{ \'has-error\' : userForm.username.$invalid && !userForm.username.$pristine }')
                label Username
                input.form-control(type='text', name='username', ng-model='user.username', ng-minlength='3', ng-maxlength='18')
                p.help-block(ng-show='userForm.username.$error.minlength') Username is too short.
                p.help-block(ng-show='userForm.username.$error.maxlength') Username is too long.
            //
               EMAIL
            .form-group(ng-class='{ \'has-error\' : userForm.email.$invalid && !userForm.email.$pristine }')
                label Email
                input.form-control(type='email', name='email', ng-model='user.email')
                p.help-block(ng-show='userForm.email.$invalid && !userForm.email.$pristine') Enter a valid email.



            //
               SUBMIT BUTTON
            button.btn.btn-primary(type='submit' , ng-disabled="userForm.$invalid") Submit
        //col-sm-8

        table#uniqueTable.table.table-bordered(ng-show="hideShowTrigFormTable")
            tr
                th id
                th User
                th Username
                th Email
                th Actions
            tr(ng-repeat='user in users')
                td
                    {{user.id}}
                td
                    {{user.name}}
                td
                    {{user.username}}
                td
                    {{user.email}}
                td
                    span(ng-click="deleteRow(user.id)") delete

            //container

